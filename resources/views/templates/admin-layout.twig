{% extends 'templates/main-layout.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Morris -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.css">
    <!-- DataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.16/af-2.2.2/b-1.4.2/b-colvis-1.4.2/b-html5-1.4.2/b-print-1.4.2/cr-1.4.1/fc-3.2.3/fh-3.1.3/kt-2.3.2/r-2.2.0/rg-1.0.2/rr-1.2.3/sc-1.4.3/sl-1.2.3/datatables.min.css"/>
    <!-- SB Admin 2 -->
    <link rel="stylesheet" href="{{ base_url() }}/css/sb-admin-2.min.css">
{% endblock %}

{% block bodyClasses %}sb-admin-2{% endblock %}

{% block main %}
    <div class="container-fluid">
        <div class="row row-offcanvas row-offcanvas-left">
            <nav class="sidebar sidebar-dark sidebar-offcanvas bg-dark col-8 col-sm-4 col-md-3 col-lg-2">
                {% include 'templates/partials/admin-navigation.twig' %}
            </nav>
            <main role="main" class="col-12 col-md-9 ml-md-auto col-lg-10 p-0 {% block additionalMainClasses %}{% endblock %}">
                <button type="button" class="btn btn-raised btn-primary btn-sm d-md-none ml-3 mt-3" data-toggle="offcanvas">
                    <i class="far fa-caret-square-right fa-fw"></i> Toggle Sidebar
                </button>
                {% block content %}{% endblock %}
            </main>
            <footer class="footer col-12 col-md-9 col-lg-10 p-0">
                {% include 'templates/partials/footer.twig' %}
            </footer>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ parent() }}
    <!-- Morris -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/morris.js/0.5.1/morris.min.js"></script>
    <!-- DataTables -->
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/pdfmake.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.32/vfs_fonts.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/jszip-2.5.0/dt-1.10.16/af-2.2.2/b-1.4.2/b-colvis-1.4.2/b-html5-1.4.2/b-print-1.4.2/cr-1.4.1/fc-3.2.3/fh-3.1.3/kt-2.3.2/r-2.2.0/rg-1.0.2/rr-1.2.3/sc-1.4.3/sl-1.2.3/datatables.min.js"></script>
    <!-- SB Admin 2 -->
    <script src="{{ base_url() }}/js/sb-admin-2.min.js"></script>
{% endblock %}