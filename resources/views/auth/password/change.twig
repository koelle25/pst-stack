{% extends 'templates/main-layout.twig' %}

{% block content %}

    <div class="container">
        {% include "templates/partials/flash.twig" %}

        <div class="row">
            <div class="col-md-4 mx-md-auto">
                <div class="card">
                    <div class="card-header">
                        <h3>Change password</h3>
                    </div>
                    <div class="card-body">
                        <form action="{{ path_for('auth.password.change') }}" method="post">
                            <fieldset>
                                <div class="form-group">
                                    <label class="bmd-label-floating" for="currentPassword">Current Password</label>
                                    <input name="currentPassword" type="password"
                                           class="form-control{{ errors.currentPassword ? ' is-invalid' : '' }}"
                                           id="currentPassword" placeholder="Current Password"
                                           value="{{ old.currentPassword }}" autofocus>
                                    {% if errors.currentPassword %}
                                        <span class="invalid-feedback">{{ errors.currentPassword | first }}</span>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <label class="bmd-label-floating" for="password">New Password</label>
                                    <input name="password" type="password"
                                           class="form-control{{ errors.password ? ' is-invalid' : '' }}" id="password"
                                           placeholder="New Password" value="{{ old.password }}">
                                    {% if errors.password %}
                                        <span class="invalid-feedback">{{ errors.password | first }}</span>
                                    {% endif %}
                                </div>
                                <button type="submit" class="btn btn-lg btn-success btn-block">Change password</button>
                                {{ csrf.field | raw }}
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}