{% extends 'templates/main-layout.twig' %}

{% block content %}

    <div class="container">
        {% include "templates/partials/flash.twig" %}

        <div class="row">
            <div class="col-md-4 mx-md-auto">
                <div class="card">
                    <div class="card-header">
                        <h3>Sign in</h3>
                    </div>
                    <div class="card-body">
                        <form action="{{ path_for('auth.signin') }}" method="post" role="form">
                            <fieldset>
                                <div class="form-group">
                                    <label class="bmd-label-floating" for="email">Username (E-Mail-Address)</label>
                                    <input name="email" type="text"
                                           class="form-control{{ errors.email ? ' is-invalid' : '' }}" id="email"
                                           placeholder="Username (E-Mail-Address)" value="{{ old.email }}" autofocus>
                                    {% if errors.email %}
                                        <span class="invalid-feedback">{{ errors.email | first }}</span>
                                    {% endif %}
                                </div>
                                <div class="form-group">
                                    <label class="bmd-label-floating" for="password">Password</label>
                                    <input name="password" type="password"
                                           class="form-control{{ errors.password ? ' is-invalid' : '' }}" id="password"
                                           placeholder="Password" value="{{ old.password }}">
                                    {% if errors.password %}
                                        <span class="invalid-feedback">{{ errors.password | first }}</span>
                                    {% endif %}
                                </div>
                                <button type="submit" class="btn btn-lg btn-success btn-block">Sign in</button>
                                {{ csrf.field | raw }}
                            </fieldset>
                        </form>
                    </div>
                    <div class="card-footer">
                        <p>Don't have account? <a href="{{ path_for('auth.signup') }}">Sign up</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}